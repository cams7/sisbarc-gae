<?xml version="1.0" encoding="utf-8"?>
<appengine-web-app xmlns="http://appengine.google.com/ns/1.0">
	<application>acende-apaga-leds</application>
	<version>1</version>

	<!-- Multiplas requisicoes para a mesma instancia -->
	<threadsafe>true</threadsafe>

	<sessions-enabled>true</sessions-enabled>

	<async-session-persistence enabled="false" />

	<!-- Configura log4j -->
	<system-properties>
		<property name="java.util.logging.config.file" value="WEB-INF/classes/log4j.properties" />
	</system-properties>
	
	<static-files>
		<include path="/favicon.ico" />
	</static-files>

</appengine-web-app>
